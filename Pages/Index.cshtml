@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<div class="jumbotron">
    <h1 class="display-4">WillardSoftware</h1>

</div>


<div id="carouselIndicators" class="carousel slide" data-ride="carousel" data-interval="false" style="margin: auto; max-width: 1150px;">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>

    </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">            
                <img class="d-block w-100" src="images\dagger.png" alt="First slide" style="max-width: 1150px; height: auto; width: 100%;"/>
                <h1 class="display-4 center">
                    3D Modeling
                </h1>
            </div>

            <div class="carousel-item">            
                <img class="d-block w-100" src="images\DOSPrompt.png" alt="Second slide" style="max-width: 1150px; height: auto; width: 100%;"/>
                <h1 class="display-4 center">
                    Development
                </h1>
            </div>

            <div class="carousel-item">            
                <img class="d-block w-100" src="images\design.png" alt="Third slide" style="max-width: 1150px; height: auto; width: 100%;"/>
                <h1 class="display-4 center">
                    Web Design
                </h1>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev" style="background-color: rgba(0, 167, 194, .25);">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next" style="background-color: rgba(0, 167, 194, .25);">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
</div>